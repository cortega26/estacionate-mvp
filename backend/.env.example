# Server Configuration
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
# Use Supabase Connection Pooler (Transaction Mode, Port 6543) for best performance
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:6543/postgres?pgbouncer=true"

# Redis (Upstash) for Rate Limiting
# Use the REDIS_URL from Upstash Console
REDIS_URL="redis://default:[PASSWORD]@[REGION].upstash.io:[PORT]"

# Authentication
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET="replace-with-secure-random-string"

# Frontend URL (for CORS)
FRONTEND_URL="https://estacionate-mvp.vercel.app"

# External Services (Optional for Local Dev)
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="..."
TWILIO_PHONE_NUMBER="+1234567890"

MERCADOPAGO_ACCESS_TOKEN="..."
FINTOC_SECRET_KEY="..."
